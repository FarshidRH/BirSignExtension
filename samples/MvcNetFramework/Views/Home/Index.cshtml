@model MvcNetFramework.Models.ApplicationUser
@{
    ViewBag.Title = "Home Page";
}

<style type="text/css">
    dt {
        font-weight: normal;
    }

    dd {
        font-weight: bold;
    }
</style>
<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1>Actions</h1>
        <hr />
        <section class="col-md-6 mb-3">
            <a href="@Url.Action("SendRoles", "BirSignManage")" target="_blank" class="btn btn-outline-dark">Send Roles</a>
        </section>
    </section>
    <div class="row">
        <section class="col-md-4">
            <h1>User Status</h1>
            <hr />
            @if (!User.Identity.IsAuthenticated)
            {
                <section class="col-md-4">
                    <b class="text-danger">Unauthorized</b>
                </section>
            }
            else
            {
                <b class="text-success">Authorized</b>
            }
        </section>
        @if (User.Identity.IsAuthenticated)
        {
            <section class="col-md-4">
                <h1>User Info</h1>
                <hr />
                <dl>
                    <dt>Name</dt>
                    <dd>@Model.Name</dd>
                    <dt>Family</dt>
                    <dd>@(Model?.Family ?? "-")</dd>
                    <dt>NationalCode</dt>
                    <dd>@(Model?.NationalCode ?? "-")</dd>
                    <dt>Birthdate</dt>
                    <dd>@(Model?.BirthDay ?? "-")</dd>
                    <dt>PhoneNumber</dt>
                    <dd>@(Model?.PhoneNumber ?? "-")</dd>
                    <dt>Email</dt>
                    <dd>@Model.Email</dd>
                    <dt>Username</dt>
                    <dd>@Model.UserName</dd>
                </dl>
            </section>
            <section class="col-md-4">
                <h1>User Roles</h1>
                <hr />
                @{
                    var roles = (List<string>)ViewBag.Roles;
                }
                @foreach (var role in roles)
                {
                    <p><b>@role</b></p>
                }
            </section>
        }
    </div>
</main>